<%= simple_form_for product do |f| %>
  <div class="form-inputs">
    <%= f.input :named_id, label: 'Named ID', autofocus: true, :input_html => {:minlength => 1} %>
    <%= f.input :name, :input_html => {:minlength => 1} %>
    <%= f.input :price, :input_html => {:minlength => 1} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<%end%>