<p id="notice"><%= notice %></p>

<h1>Price Discount Rules</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @price_discount_rules.each do |price_discount_rule| %>
      <tr>
        <td>Client: <%= price_discount_rule.client[:name] %></td>
        <td>Product: <%= price_discount_rule.product[:name] %></td>
        <td>Eligible Qtty: <%= price_discount_rule[:eligible_qtty] %></td>
        <td>Special Price: $<%= price_discount_rule[:new_price] %></td>
        <td><%= link_to 'Edit', edit_price_discount_rule_path(price_discount_rule) %></td>
        <td><%= link_to 'Destroy', price_discount_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rule', new_price_discount_rule_path %>
